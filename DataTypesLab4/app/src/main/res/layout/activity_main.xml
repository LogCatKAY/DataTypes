<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:hint="x1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:id="@+id/et_x1"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/et_step_h" android:layout_marginStart="12dp"
    />
    <EditText
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:hint="x2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:id="@+id/et_x2"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.244"/>
    <Button
            android:text=")"
            style="@style/CalcButton"
            android:id="@+id/btn_skob_2"
            app:layout_constraintBottom_toTopOf="@+id/btn_8"
            app:layout_constraintStart_toEndOf="@+id/btn_skob_1"
    />
    <Button
            android:text="("
            style="@style/CalcButton"
            android:id="@+id/btn_skob_1"
            app:layout_constraintBottom_toTopOf="@+id/btn_7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="7"
            style="@style/CalcButton"
            android:id="@+id/btn_7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_4"/>
    <Button
            android:text="8"
            style="@style/CalcButton"
            android:id="@+id/btn_8"
            app:layout_constraintStart_toEndOf="@+id/btn_7" app:layout_constraintBottom_toTopOf="@+id/btn_5"
    />
    <Button
            android:text="/"
            style="@style/CalcButton"
            android:id="@+id/btn_div"
            app:layout_constraintBottom_toTopOf="@+id/btn_9"
            app:layout_constraintStart_toEndOf="@+id/btn_skob_2"
    />
    <Button
            android:text="*"
            style="@style/CalcButton"
            android:id="@+id/btn_mult"
            app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintStart_toEndOf="@+id/btn_div"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Del"
            style="@style/CalcButton"
            android:id="@+id/btn_delete"
            app:layout_constraintStart_toEndOf="@+id/btn_mult" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_pow"/>
    <Button
            android:text="^"
            style="@style/CalcButton"
            android:id="@+id/btn_pow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            android:layout_marginStart="8dp" android:layout_marginBottom="208dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="9"
            style="@style/CalcButton"
            android:id="@+id/btn_9"
            app:layout_constraintStart_toEndOf="@+id/btn_8" app:layout_constraintBottom_toTopOf="@+id/btn_6"
    />
    <Button
            android:text="+"
            style="@style/CalcButton"
            android:id="@+id/btn_plus"
            app:layout_constraintStart_toEndOf="@+id/btn_6" app:layout_constraintBottom_toTopOf="@+id/btn_result"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="-"
            style="@style/CalcButton"
            android:id="@+id/btn_minus"
            app:layout_constraintStart_toEndOf="@+id/btn_9" app:layout_constraintBottom_toTopOf="@+id/btn_plus"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="="
            style="@style/CalcButton"
            android:layout_height="128dp"
            android:id="@+id/btn_result"
            app:layout_constraintStart_toEndOf="@+id/btn_x"
            android:layout_marginBottom="16dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="4"
            style="@style/CalcButton"
            android:id="@+id/btn_4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_1"/>
    <Button
            android:text="5"
            style="@style/CalcButton"
            android:id="@+id/btn_5"
            app:layout_constraintStart_toEndOf="@+id/btn_4" app:layout_constraintBottom_toTopOf="@+id/btn_2"
    />
    <Button
            android:text="6"
            style="@style/CalcButton"
            android:id="@+id/btn_6"
            app:layout_constraintStart_toEndOf="@+id/btn_5" app:layout_constraintBottom_toTopOf="@+id/btn_3"
    />
    <Button
            android:text="x"
            style="@style/CalcButton"
            android:id="@+id/btn_x" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_0"/>
    <Button
            android:text="1"
            style="@style/CalcButton"
            android:id="@+id/btn_1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="2"
            style="@style/CalcButton"
            android:id="@+id/btn_2"
            app:layout_constraintStart_toEndOf="@+id/btn_1" app:layout_constraintBottom_toTopOf="@+id/btn_0"/>
    <Button
            android:text="3"
            style="@style/CalcButton"
            android:id="@+id/btn_3"
            app:layout_constraintStart_toEndOf="@+id/btn_2" app:layout_constraintBottom_toTopOf="@+id/btn_x"
    />
    <Button
            android:text="0"
            style="@style/CalcButton"
            android:id="@+id/btn_0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"/>
    <TextView
            android:text="Введите шаг:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Диапазон для x [x1,x2]:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_step_h" android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="Шаг h"
            android:ems="10"
            android:inputType="numberDecimal"
            android:id="@+id/et_step_h" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Введите формулу:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_result"
            app:layout_constraintVertical_bias="0.243"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Формула"
            android:ems="10"
            android:id="@+id/et_formula"
            android:focusable="false"
            android:clickable="false"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.019" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_x1"/>
    <TextView
            android:text="Тут будет результат"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_result" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_mult"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_rp_string"/>
    <TextView
            android:text="Тут будет обратная польская запись формулы"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rp_string" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/et_formula"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="-"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/et_x1"
            android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>